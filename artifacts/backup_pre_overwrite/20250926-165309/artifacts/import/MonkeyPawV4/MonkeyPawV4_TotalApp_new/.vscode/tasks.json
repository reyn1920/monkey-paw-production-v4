{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Launch (Cursor)",
      "type": "shell",
      "command": "zsh install_and_launch.zsh",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "YouTube Prep+Upload",
      "type": "shell",
      "command": "zsh tools/automation/youtube/yt_prepare_and_upload.zsh artifacts/staging/draft_youtube.txt"
    },
    {
      "label": "Build EPUB",
      "type": "shell",
      "command": "zsh tools/exporters/book_epub/build_epub.zsh 'artifacts/staging/*.txt' artifacts/published/book.epub"
    },
    {
      "label": "Build Digital Kit",
      "type": "shell",
      "command": "zsh tools/exporters/digital_kit/build_kit.zsh"
    }
  ]
}